{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7144"
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/identityService/{everything}",
      "UpstreamHttpMethod": [ "Post", "Get", "Put", "Option" ],
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5223
        }
      ],
      "DangerousAcceptAnyServerCertificateValidator": true,
      "SwaggerKey": "IdentityService"
    },
    {
      "UpstreamPathTemplate": "/OrderService/{everything}",
      "UpstreamHttpMethod": [ "Post", "Get", "Put", "Delete", "Option" ],
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7116
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "DangerousAcceptAnyServerCertificateValidator": true,
      "SwaggerKey": "OrderService",
      "AddHeadersToRequest": {
        "X-User-Id": "{Claims.uid}",
        "X-From-Gateway": "1"
      }
    },
    {
      "UpstreamPathTemplate": "/ProductService/{everything}",
      "UpstreamHttpMethod": [ "Post", "Get", "Put", "Delete", "Option" ],
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7252
        }
      ],
      //"AuthenticationOptions": {
      //  "AuthenticationProviderKey": "Bearer",
      //  "AllowedScopes": []
      //},
      "DangerousAcceptAnyServerCertificateValidator": true,
      "SwaggerKey": "OrderService"
    }
  ]
}
